// jQuery grabs the cart id and replaces its html with the cart partial
// `escape_javascript` takes the Ruby string generated by `render` and
// converts it to acceptable JavaScript for the browser.
$('#cart').html("<%= escape_javascript render(@cart) %>");

$('#current_item').css(
  {'background-color':'#88ff88'}
).animate(
  {'background-color':'#114411'},
  1000
);
